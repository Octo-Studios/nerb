{
  "schema_version": 1,
  "quilt_loader": {
    "group": "${mod_group}",
    "id": "${mod_id}",
    "version": "${mod_version}",
    "metadata": {
      "name": "${mod_id}",
      "description": "${mod_description}"
    },
    "intermediate_mappings": "net.fabricmc:intermediary",
    "entrypoints": {
      "init": [
        "${mod_group}.quilt.NERBQuilt"
      ]
    },
    "mixins": [
      "${mod_id}-common.mixins.json"
    ],
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.21"
      },
      {
        "id": "architectury",
        "version": ">=13.0.2"
      },
      {
        "id": "octolib",
        "version": ">=0.4.2"
      }
    ]
  }
}
